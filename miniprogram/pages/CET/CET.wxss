.totalScore {
  margin: 30rpx 40rpx;
  padding: 10rpx 30rpx 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 15rpx #CCC;
  background-color: #FFF;
}
.totalScore .line1 {
  font-size: 40rpx;
  font-weight:bold;
  margin: 10rpx 0;
  display: flex;
}
.totalScore .line3 .subTitle{
  margin-right: 20rpx;
  padding: 15rpx;
  font-size: 20rpx;
  border-radius: 25px;
  background-color: rgba(204, 204, 204, 0.2);
}
.totalScore .line3 {
  margin-bottom: 30rpx;
}
.totalScore .line1 .time {
  color: #888888;
  font-size: 30rpx;
  font-weight: 200;
  margin-left: auto;
  margin-top: auto;
}

.totalScore .update-time {
  font-size: 25rpx;
  text-align: right;
  color: var(--weui-FG-2);
}

.totalScore .line2 {
  display: flex;
}
.totalScore .line2 .item {
  flex: 1;
  margin-right: 20rpx;
  border-right: 1rpx solid rgba(204, 204, 204, 0.4);
}
.totalScore .line2 .item_1 {
  flex: 1;
  margin-right: 20rpx;
}
.totalScore .line2 .item_2 {
  margin-left: auto;
  margin-right: auto;
}
.totalScore .line2 .title {
  font-size: 25rpx;
  color: #999999;
}
.totalScore .line2 .value {
  font-size: 50rpx;
}

.totalScore .line3 {
  font-size: 25rpx;
}
.totalScore .line4 {
  display: flex;
  margin-bottom: 10rpx;
}
.totalScore .line4 .item {
  flex: 1;
  margin-right: 20rpx;
  border-right: 1px solid #EFEFEF ;
}
.totalScore .line4 .item_1 {
  flex: 1;
  margin-right: 20rpx;
}
.totalScore .line4 .value {
  font-size: 50rpx;
}
.message {
  margin: 30rpx 40rpx;
  color: #888888;
  font-size: 25rpx;
  text-align: center;
}
