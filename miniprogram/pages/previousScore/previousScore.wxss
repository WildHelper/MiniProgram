.line{
  width: 100%;    /* 分隔线的长度 */
  margin: auto;
  height: 1px;    /* 分隔线粗细 */
  text-align: center;
  font-size: 24rpx;
  color: #aaa;
  background: #ccc;
  margin-top: 30rpx;
  margin-bottom: 5rpx;
  flex: 1;
}
.arrow{
  width: 10px;
  height: 10px;
  border-top: 2px solid #999;
  border-right: 2px solid #999;

  right: 20rpx;
  transform: rotate(45deg);
  margin-top:20rpx;
}
.title {
  flex: 9;
}


.totalScore {
  margin: 30rpx 40rpx;
  padding: 10rpx 30rpx 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 15rpx #CCC;
  background-color: #FFF;
}
.totalScore .line1 {
  font-size: 40rpx;
  font-weight:bold;
  margin: 10rpx 0;
  display: flex;
}
.totalScore .line2 {
  margin-bottom: 30rpx;
}
.totalScore .line3 {
  display: flex;
}
.totalScore .line3 .item {
  flex: 1;
  margin-right: 20rpx;
  border-right: 1rpx solid rgba(204, 204, 204, 0.4);
}
.totalScore .line3 .item_1 {
  flex: 1;
  margin-right: 20rpx;
}
.totalScore .line3 .title {
  font-size: 25rpx;
  color: #999999;
}
.totalScore .line3 .value {
  font-size: 50rpx;
}
.totalScore .time {
  font-size: 25rpx;
  text-align: right;
  color: #c4c4c4;
}